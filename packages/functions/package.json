    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "firebase-functions-test": "^2.4.0",
    "prettier": "^2.7.1",
    "typescript": "^4.5.4"
